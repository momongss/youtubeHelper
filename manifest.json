{
  "manifest_version": 3,
  "name": "YouTube Default Tab Switcher",
  "version": "1.0",
  "description": "Automatically switches the YouTube recommendation tab to 'Related Content' by default.",
  "permissions": ["tabs", "activeTab", "scripting"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
